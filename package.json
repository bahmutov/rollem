{
  "name": "rollem",
  "version": "0.0.0-semantic-release",
  "description": "Roll up multiple ES6 bundles at once",
  "author": "Gleb Bahmutov <gleb.bahmutov@gmail.com>",
  "bugs": "https://github.com/bahmutov/rollem/issues",
  "config": {
    "pre-git": {
      "commit-msg": "simple",
      "pre-commit": [
        "npm run deps",
        "npm test",
        "npm run e2e",
        "npm run ban"
      ],
      "pre-push": [
        "npm run secure",
        "npm run license",
        "npm run ban -- --all",
        "npm run size"
      ],
      "post-commit": [],
      "post-merge": []
    }
  },
  "engines": {
    "node": ">=6"
  },
  "bin": {
    "rollem": "bin/rollem.js"
  },
  "files": [
    "bin/*.js",
    "src/*.js",
    "!src/*-spec.js"
  ],
  "homepage": "https://github.com/bahmutov/rollem#readme",
  "keywords": [
    "bundle",
    "es6",
    "roll",
    "rollup"
  ],
  "license": "MIT",
  "main": "src/",
  "noScopeName": "rollem",
  "publishConfig": {
    "registry": "http://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bahmutov/rollem.git"
  },
  "scripts": {
    "ban": "ban",
    "deps": "deps-ok",
    "format": "standard-format -w bin/*.js src/*.js",
    "issues": "git-issues",
    "license": "license-checker --production --onlyunknown --csv",
    "lint": "standard --verbose bin/*.js src/*.js",
    "pretest": "npm run format && npm run lint",
    "secure": "nsp check",
    "size": "t=\"$(npm pack .)\"; wc -c \"${t}\"; tar tvf \"${t}\"; rm \"${t}\";",
    "test": "npm run unit",
    "unit": "mocha src/*-spec.js",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "test-default-es5": "cd test/es5-config; npm test",
    "test-specified-es5": "cd test/specific-config; npm test",
    "test-es6": "cd test/es6-config; npm test",
    "test-plugins": "cd test/with-plugins; npm test",
    "test-multi-entry": "cd test/with-multi-entry-plugin; npm test",
    "e2e": "npm run test-default-es5 && npm run test-specified-es5 && npm run test-es6 && npm run test-plugins && npm run test-multi-entry"
  },
  "devDependencies": {
    "assert": "1.4.1",
    "ban-sensitive-files": "1.8.3",
    "deps-ok": "1.1.0",
    "git-issues": "1.2.0",
    "license-checker": "5.1.2",
    "mocha": "2.5.3",
    "nsp": "2.4.0",
    "pre-git": "3.9.0",
    "rollup-plugin-multi-entry": "^2.0.1",
    "rollup-plugin-node-resolve": "2.0.0",
    "semantic-release": "^4.3.5",
    "standard": "7.1.2",
    "standard-format": "2.2.1",
    "stop-build": "1.0.1"
  },
  "dependencies": {
    "debug": "2.2.0",
    "minimist": "1.2.0",
    "ramda": "0.21.0",
    "rollup": "0.41.4",
    "watch-glob": "0.1.3"
  }
}
